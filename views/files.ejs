<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/docs.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="topo">
      <div class="container">
        <span class="topo-logo"></span>
        <div class="topo-user">
          <!-- <span class="user-photo"></span> -->
          <span class="glyphicon glyphicon-user"></span>
          <span class="user-info"><strong>Usuário</strong>: <%= user.login %> </span>
          <a href="/logout"> Logout <span class="glyphicon glyphicon-log-out"></span></a>
        </div>
      </div>
    </div>
    <div class="wrapper container">
      <h4><%= title %></h4>
      <p>Lista de Arquivos</p>
      <hr>

      <% if (diretorio.isSubdiretorio=='true') { %>
        <h2><strong> <%= diretorio.nome %> </strong></h2>
        <ul class="pager">
          <li class="previous"><a href="javascript: history.go(-1)">&larr; Voltar</a></li>
        </ul>
      <% } else { %>
        <h2><strong>Raíz</strong></h2>
      <% } %>
      <div class="panel panel-default">
        <!-- Default panel contents -->
        <!-- Table -->
        <table class="table table-striped table-files">
            <thead>
              <tr>
                <th>Nome do Arquivo</th> 
                <th>Download</th>
              </tr>
            </thead>
            <tbody>
              <% if (files.length) { %>
                  <% files.forEach(function(file){ %>
                    <tr>
                        <% if (file.tipo == 'file') { %>
                          <td><span class="glyphicon glyphicon-file"></span><%= file.nome %></td>
                          <td><a href="<%= file.url %>" class="btn btn-info">Download</a></td>
                        <% } %>
                        <% if (file.tipo == 'folder') { %>
                          <td><a href="<%= file.url %>"</a> <span class="glyphicon glyphicon-folder-open"></span><%= file.nome %></td>
                          <td></td>
                        <% } %>
                    </tr> 
                  <% }) %> 
              <% } %> 
            </tbody>
          </table>
      </div>
    </div>
  </body>
</html>
